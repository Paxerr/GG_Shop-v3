@model IEnumerable<GG_Shop_v3.Models.Category>
@using GG_Shop_v3.Models
@using System.Linq

@{
    ViewBag.Title = "Danh sách các danh mục";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="content-page">
    <div class="container-fluid">
        <h2>Danh mục</h2>
        <a href="@Url.Action("Create", "Categories")" class="btn btn-danger mt-2">
            Tạo danh mục
        </a>

        <table class="table">
            <tr>
                <th>Tên danh mục</th>
                <th>Mô tả</th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a href="@Url.Action("Edit", new { id = item.Id })" class="badge badge-success mr-2" title="Sửa">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a href="@Url.Action("Details", new { id = item.Id })" class="badge badge-info mr-2" title="Chi tiết">
                            <i class="fas fa-eye"></i>
                        </a>
                        <a href="@Url.Action("Delete", new { id = item.Id })" class="badge bg-warning mr-2" title="Xóa">
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
            }


        </table>


    </div>
</div>
