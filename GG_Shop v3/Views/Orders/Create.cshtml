@model GG_Shop_v3.Models.Order
@{
    ViewBag.Title = "Create Order";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="content-page">
    <div class="container-fluid add-form-list">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="header-title">
                            <h4 class="card-title">Add New Order</h4>
                        </div>
                    </div>

                    <div class="card-body">
                        @using (Html.BeginForm("Create", "Orders", FormMethod.Post))
                        {
                            @Html.AntiForgeryToken()
                            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Người đặt *</label>
                                        @Html.DropDownList("User_Id", null, "Chọn người dùng", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Địa chỉ giao hàng *</label>
                                        @Html.EditorFor(m => m.Shipping_Address, new { htmlAttributes = new { @class = "form-control", placeholder = "Nhập địa chỉ giao hàng" } })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Trạng thái *</label>
                                        @Html.DropDownList("Status", (SelectList)ViewBag.StatusList, "Chọn trạng thái", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>Mã khuyến mãi</label>
                                        @Html.DropDownList("Promo_Id", null, "(Không áp dụng)", new { @class = "form-control" })
                                    </div>
                                </div>
                            </div>

                            <hr />
                            <h5 class="mb-3 mt-4">Thêm sản phẩm vào đơn</h5>

                            <div class="row align-items-end">
                                <div class="col-md-5">
                                    <div class="form-group">
                                        <label>Chọn sản phẩm (SKU)</label>
                                        @Html.DropDownList("SelectedSkuId", (SelectList)ViewBag.SkuList, "Chọn SKU", new { @class = "form-control" })
                                    </div>
                                </div>

                                <div class="col-md-3">
                                    <div class="form-group">
                                        <label>Số lượng</label>
                                        <input type="number" name="SelectedQuantity" class="form-control" value="1" min="1" />
                                    </div>
                                </div>

                                <div class="col-md-2">
                                    <button type="submit" name="action" value="AddItem" class="btn btn-success w-100">
                                        + Thêm sản phẩm
                                    </button>
                                </div>
                            </div>

                            if (ViewBag.TempItems != null && ((List<GG_Shop_v3.Models.Order_Item>)ViewBag.TempItems).Any())
                            {
                                <div class="table-responsive mt-4">
                                    <table class="table table-bordered table-striped">
                                        <thead class="thead-light">
                                            <tr>
                                                <th>Tên sản phẩm</th>
                                                <th>Màu</th>
                                                <th>Size</th>
                                                <th>Số lượng</th>
                                                <th>Giá (₫)</th>
                                                <th>Tổng (₫)</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in (List<GG_Shop_v3.Models.Order_Item>)ViewBag.TempItems)
                                            {
                                                <tr>
                                                    <td>@item.Product_Sku.Product.Title</td>
                                                    <td>@item.Product_Sku.Color</td>
                                                    <td>@item.Product_Sku.Size</td>
                                                    <td>@item.Quantity</td>
                                                    <td>@String.Format("{0:N0}", item.Price)</td>
                                                    <td>@String.Format("{0:N0}", item.Quantity * item.Price)</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                            else
                            {
                                <p class="text-muted"><i>Chưa có sản phẩm nào trong đơn.</i></p>
                            }

                            <div class="text-center mt-4">
                                <button type="submit" name="action" value="SaveOrder" class="btn btn-primary mr-2">
                                    Lưu đơn hàng
                                </button>
                                <a href="@Url.Action("Index", "Orders")" class="btn btn-secondary">
                                    Hủy
                                </a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
