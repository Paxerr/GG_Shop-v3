

@{
    ViewBag.Title = "Order Details";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="content-page">
    <div class="container-fluid add-form-list">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <div class="header-title">
                            <h4 class="card-title">Chi tiết đơn hàng</h4>
                        </div>
                    </div>

                    <div class="card-body">
                        <!-- Nơi hiển thị dữ liệu AJAX -->
                        <div id="order-details">
                            <p>Đang tải dữ liệu đơn hàng...</p>
                        </div>

                        <div class="text-center mt-4">
                            <a href="@Url.Action("Edit", "Orders", new { id = Model.Id })" class="btn btn-warning mr-2">
                                <i class="ri-edit-box-line"></i> Sửa đơn
                            </a>
                            <a href="@Url.Action("Index", "Orders")" class="btn btn-secondary">
                                <i class="ri-arrow-go-back-line"></i> Quay lại danh sách
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
$(document).ready(function() {
    // Lấy orderId từ query string
    var pathParts = window.location.pathname.split('/');
    var orderId = pathParts[pathParts.length - 1];
    $('#OrderId').val(orderId);

    $.ajax({
        url: '/Orders/GetOrderDetails',
        type: 'POST',
        data: { id: orderId },
        success: function(res) {
            if(!res){
                $('#order-details').html('<p>Không tìm thấy dữ liệu đơn hàng.</p>');
                return;
            }

            var html = `
                <h5 class="mb-3">Thông tin đơn hàng</h5>
                <dl class="row">
                    <dt class="col-sm-4">Người đặt:</dt><dd class="col-sm-8">${res.UserName}</dd>
                    <dt class="col-sm-4">Trạng thái:</dt><dd class="col-sm-8">${res.Status}</dd>
                    <dt class="col-sm-4">Tổng tiền:</dt><dd class="col-sm-8">${Number(res.Total_Amount).toLocaleString()} ₫</dd>
                    <dt class="col-sm-4">Địa chỉ giao hàng:</dt><dd class="col-sm-8">${res.Shipping_Address}</dd>
                    <dt class="col-sm-4">Ngày tạo:</dt><dd class="col-sm-8">${res.Created_At}</dd>
                    <dt class="col-sm-4">Mã khuyến mãi:</dt><dd class="col-sm-8">${res.PromoCode || 'Không có'}</dd>
                    <dt class="col-sm-4">Số tiền giảm:</dt><dd class="col-sm-8">${res.Discount > 0 ? Number(res.Discount).toLocaleString() + ' ₫' : 'Không có'}</dd>
                </dl>

                <h5 class="mb-3 mt-4">🛒 Sản phẩm trong đơn</h5>
            `;

            if(res.Items && res.Items.length > 0){
                html += `
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped">
                            <thead class="thead-light">
                                <tr>
                                    <th>Tên sản phẩm</th>
                                    <th>Màu</th>
                                    <th>Size</th>
                                    <th>Số lượng</th>
                                    <th>Giá (₫)</th>
                                    <th>Tổng (₫)</th>
                                </tr>
                            </thead>
                            <tbody>
                                ${res.Items.map(i => `
                                    <tr>
                                        <td>${i.Product}</td>
                                        <td>${i.Color}</td>
                                        <td>${i.Size}</td>
                                        <td>${i.Quantity}</td>
                                        <td>${Number(i.Price).toLocaleString()}</td>
                                        <td>${Number(i.Total).toLocaleString()}</td>
                                    </tr>
                                `).join('')}
                            </tbody>
                        </table>
                    </div>
                `;
            } else {
                html += '<p class="text-muted"><i>Chưa có sản phẩm nào trong đơn.</i></p>';
            }

            $('#order-details').html(html);
        },
        error: function() {
            $('#order-details').html('<p>Lỗi khi tải dữ liệu đơn hàng.</p>');
        }
    });
});
    </script>
}
