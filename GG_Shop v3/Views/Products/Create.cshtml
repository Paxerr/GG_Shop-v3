@model GG_Shop_v3.Models.Product

@{
    ViewBag.Title = "Create Product";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<link href="@Url.Content("~/Content/css_admin/CreateProduct_css.css")" rel="stylesheet" />

<div class="content-page">
    <div class="container-fluid add-form-list">
        <div class="row">
            <div class="col-12 col-lg-10">
                @using (Html.BeginForm("Create", "Products", FormMethod.Post, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-row">
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Title, "Tên sản phẩm *")
                            @Html.TextBoxFor(m => m.Title, new { @class = "form-control", placeholder = "Nhập tên", required = "required" })
                        </div>

                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Category_Id, "Danh mục sản phẩm *")
                            @Html.DropDownList("Category_Id", (SelectList)ViewBag.Category_Id, "Chọn danh mục", new { @class = "form-control" })
                        </div>

                        <!-- ===== status selector ===== -->
                        <div class="form-group col-md-6">
                            @Html.LabelFor(m => m.Status, "Trạng thái")
                            @Html.DropDownListFor(
                                m => m.Status,
                                new SelectList(new[]
                                {
                                    new { Value = "Đang bán", Text = "Đang bán" },
                                    new { Value = "Chưa bán", Text = "Chưa bán" }
                                }, "Value", "Text", Model?.Status),
                                "Chọn trạng thái",
                                new { @class = "form-control" }
                            )
                        </div>
                        <!-- ============================ -->

                        <div class="form-group col-md-12">
                            @Html.LabelFor(m => m.Description, "Mô tả")
                            @Html.TextAreaFor(m => m.Description, 4, 80, new { @class = "form-control" })
                        </div>

                        <div class="form-group col-md-12">
                            <label>Ảnh (chọn nhiều)</label>
                            <input type="file" name="images" accept="image/*" multiple class="form-control" />
                        </div>
                    </div>

                    <hr />

                    <!-- Tag inputs for Colors and Sizes -->
                    <div class="form-row">
                        <div class="form-group col-md-6" style="position:relative;">
                            <label>Màu sắc</label>
                            <div id="colorsInput" class="tag-input" tabindex="0">
                                <input id="colorsText" placeholder="Thêm màu (ví dụ: Đen)" />
                            </div>
                            <div id="colorsSuggestions" class="suggestions" style="display:none;"></div>
                            <small class="form-text text-muted">Chọn loại màu và nhấn Enter.  Có thể thêm nhiều.</small>
                        </div>

                        <div class="form-group col-md-6" style="position:relative;">
                            <label>Kích cỡ</label>
                            <div id="sizesInput" class="tag-input" tabindex="0">
                                <input id="sizesText" placeholder="Thêm kích cỡ (ví dụ: M/L)" />
                            </div>
                            <div id="sizesSuggestions" class="suggestions" style="display:none;"></div>
                            <small class="form-text text-muted">Chọn loại kích cỡ và nhấn Enter.  Có thể thêm nhiều.</small>
                        </div>
                    </div>

                    <!-- variants (cartesian product area) -->
                    <div class="form-group">
                        <h5>Danh sách sản phẩm</h5>
                        <p class="text-muted small"></p>

                        <div id="variantsWrapper">
                            <table id="variantsTable" class="table table-sm table-bordered variant-table">
                                <thead>
                                    <tr>
                                        <th>Màu sắc</th>
                                        <th>Kích cỡ</th>
                                        <th>Mã sản phẩm</th>
                                        <th>Số lượng</th>
                                        <th>Giá (VNĐ)</th>
                                        <th>Xóa</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <!-- rows generated by JS -->
                                </tbody>
                            </table>
                            <div id="noVariantsNote" class="text-muted">Thêm ít nhất 1 loại màu và 1 loại kích cỡ để tạo sản phẩm.</div>
                        </div>
                    </div>

                    <div class="form-group mt-3">
                        <input type="submit" value="Thêm Sản phẩm" class="btn btn-primary" />
                        <a class="btn btn-secondary" href="@Url.Action("Index", "Products")">Quay Lại</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="@Url.Content("~/Scripts/js_admin/CreateProduct_js.js")"></script>
}
