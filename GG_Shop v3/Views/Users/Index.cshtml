@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}
<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-0">Danh sách Người Dùng (Users)</h4>
                    </div>
                    <a href="@Url.Action("Create", "Users")" class="btn btn-primary add-list">
                        <i></i>Thêm Người dùng
                    </a>
                </div>
            </div>
            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">

                    <table id="datatable" class="data-table table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                <th>Tên tài khoản</th>
                                <th>Email</th>
                                <th>Tên người dùng</th>
                                <th>Số điện thoại</th>
                                <th>Quốc gia</th>
                                <th>Vai trò</th>
                                <th>Hành động</th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                        </tbody>
                </div>
            </div>
        </div>
    </div>
    <div class="modal fade" id="deleteModal" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header bg-warning">
                    <h5 class="modal-title text-dark">Xác nhận xóa</h5>
                </div>
                <div class="modal-body">
                    Bạn có chắc muốn xóa người dùng này?
                </div>
                <div class="modal-footer">
                    <button class="btn btn-outline-warning mt-2" data-dismiss="modal">Hủy</button>
                    <button id="confirmDelete" class="btn btn-warning mt-2">Xóa</button>
                </div>
            </div>
        </div>
    </div>

</div>

@section scripts {
    <script>

    $(document).ready(function () {

        var deleteId = 0;

    function loadUserTable(){
        $.ajax({
            url: '@Url.Action("getListUsers", "Users")',
            type: 'POST',
            success: function (rs) {
                var tbody = $("#datatable tbody");
                tbody.empty();

                rs.forEach(function (u) {
                    tbody.append(`
                    <tr>
                        <td>${u.Username}</td>
                        <td>${u.Email}</td>
                        <td>${u.Full_Name}</td>
                        <td>${u.Phone_Number}</td>
                        <td>${u.Country}</td>
                        <td>${u.Role}</td>
                        <td>
                            <div class="d-flex align-items-center list-action">
                                    <a class="badge badge-info mr-2" href="/Users/Details/${u.Id}">
                                        <i class="ri-eye-line"></i>
                                    </a>
                                    <a class="badge bg-success mr-2" href="/Users/Edit/${u.Id}">
                                        <i class="ri-pencil-line"></i>
                                    </a>
                                    <a class="badge bg-warning mr-2 btn-delete-user" data-id="${u.Id}">
                                        <i class="ri-delete-bin-line"></i>
                                    </a>
                              </div>
                        </td>
                    </tr>
                `);
                });
                $('#datatable').DataTable();
            },
            error: function () {
                alert('Lỗi hệ thống');
            }
        });
        };

    loadUserTable();

    // Khi nhấn nút XÓA
    $(document).on("click", ".btn-delete-user", function () {
        deleteId = $(this).data("id");
        $("#deleteModal").modal("show");
    });

    // Xác nhận xóa
    $("#confirmDelete").click(function () {

        $.ajax({
            url: "/Users/DeleteUser",
            type: "POST",
            data: { id: deleteId },
            success: function (rs) {
                $("#deleteModal").modal("hide");
                alert(rs);

                // load lại bảng
                $("#datatable").DataTable().destroy();
                loadUserTable();
            },
            error: function () {
                alert("Lỗi hệ thống!");
            }
        });
    });

});

    </script>
}
