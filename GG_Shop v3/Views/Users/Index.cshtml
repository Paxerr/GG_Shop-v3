@model IEnumerable<GG_Shop_v3.Models.User>

@{
    ViewBag.Title = "User List";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <div>
                        <h4 class="mb-0">Danh sách Người Dùng (Users)</h4>
                    </div>
                    <a href="@Url.Action("Create", "Users")" class="btn btn-primary add-list">
                        <i></i>Thêm Người dùng
                    </a>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="table-responsive rounded mb-3">

                    <table id="datatable" class="data-table table mb-0 tbl-server-info">
                        <thead class="bg-white text-uppercase">
                            <tr class="ligth ligth-data">
                                <th>@Html.DisplayNameFor(model => model.Username)</th>
                                <th>@Html.DisplayNameFor(model => model.Email)</th>
                                <th>@Html.DisplayNameFor(model => model.Full_Name)</th>
                                <th>@Html.DisplayNameFor(model => model.Phone_Number)</th>
                                <th>@Html.DisplayNameFor(model => model.Country)</th>
                                <th>@Html.DisplayNameFor(model => model.Role)</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody class="ligth-body">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(modelItem => item.Username)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Email)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Full_Name)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Phone_Number)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Country)</td>
                                    <td>@Html.DisplayFor(modelItem => item.Role)</td>
                                    <td>
                                        <div class="d-flex align-items-center list-action">
                                            <a class="badge badge-info mr-2" data-toggle="tooltip" data-placement="top" title="View"
                                               href="@Url.Action("Details", "Users", new { id = item.Id })">
                                                <i class="ri-eye-line mr-0"></i>
                                            </a>
                                            <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Edit"
                                               href="@Url.Action("Edit", "Users", new { id = item.Id })">
                                                <i class="ri-pencil-line mr-0"></i>
                                            </a>
                                            <a class="badge bg-warning mr-2" data-toggle="tooltip" data-placement="top" title="Delete"
                                               href="@Url.Action("Delete", "Users", new { id = item.Id })">
                                                <i class="ri-delete-bin-line mr-0"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>

                    
                    @section scripts {
                        <script>
                            $(document).ready(function () {
                                $('#datatable').DataTable();
                            });
                        </script>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
