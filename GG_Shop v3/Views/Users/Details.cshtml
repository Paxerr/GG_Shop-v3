@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout_admin.cshtml";
}

<div class="content-page">
    <div class="container-fluid">
        <div class="row">
            <div class="col-lg-12">
                <div class="d-flex flex-wrap align-items-center justify-content-between mb-4">
                    <h4 class="mb-3">Chi tiết Người dùng: <span id="username"></span></h4>
                    <a href="@Url.Action("Index", "Users")" class="btn btn-primary add-list">
                        <i class="las la-angle-left mr-2"></i>Quay lại Danh sách
                    </a>
                </div>
            </div>

            <div class="col-lg-12">
                <div class="card">
                    <div class="card-header d-flex justify-content-between">
                        <div class="list-action">
                            <a class="badge bg-success mr-2" data-toggle="tooltip" data-placement="top" title="Chỉnh sửa"
                               href="javascript:void(0)" id="btnEdit">
                                <i class="ri-pencil-line mr-0"></i> Chỉnh sửa
                            </a>
                        </div>
                    </div>
                    <div class="card-body">
                        <div class="row">

                            <div class="col-md-6">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Tên tài khoản :</span>
                                        <strong id="txtUsername"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Mật khẩu :</span>
                                        <strong id="txtPassword"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Email :</span>
                                        <strong id="txtEmail"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Tên người dùng :</span>
                                        <strong id="txtFullName"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Số điện thoại :</span>
                                        <strong id="txtPhone"></strong>
                                    </li>
                                </ul>
                            </div>

                            <div class="col-md-6">
                                <ul class="list-group list-group-flush">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Quốc gia :</span>
                                        <strong id="txtCountry"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Vai trò :</span>
                                        <span class="badge badge-secondary" id="txtRole"></span>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Số đơn hàng :</span>
                                        <strong id="txtOrders"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Chi tiêu :</span>
                                        <strong id="txtTotalSpent"></strong>
                                    </li>
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        <span class="text-secondary">Cấp bậc :</span>
                                        <strong id="txtRank"></strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>

<script>
$(document).ready(function() {
    var userId = '@ViewBag.UserId';

    // Lấy dữ liệu user bằng AJAX
    $.ajax({
        url: '/Users/GetUserDetails',
        type: 'POST',   
        data: { id: userId },
        success: function (res) {
            $('#username').text(res.Username);
            $('#txtUsername').text(res.Username);
            $('#txtPassword').text(res.Password);
            $('#txtEmail').text(res.Email);
            $('#txtFullName').text(res.Full_Name);
            $('#txtPhone').text(res.Phone_Number);
            $('#txtCountry').text(res.Country);
            $('#txtRole').text(res.Role);
            $('#txtOrders').text(res.Orders);
            $('#txtTotalSpent').text(res.Total_Spent);
            $('#txtRank').text(res.Rank);

            // Thiết lập nút Edit
            $('#btnEdit').attr('href', '/Users/Edit/' + res.Id);
        },
        error: function() {
            alert('Lỗi khi lấy dữ liệu người dùng');
        }
    });
});
</script>
